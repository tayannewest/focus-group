<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <section>
    <h1>Here is where you see the details%></h1>
    <p><%= idea.content %> </p>
    <p>Submitted by <%= idea.contributor.name %></p>
    <% if (idea.contributor.equals(user?.profile._id)) { %>
      <form action="/ideas/<%= idea._id %>/edit" method="GET">
        <button type="submit">Edit this Idea</button>
      </form>
      <form action="/ideas/<%= idea._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete this Idea</button>
      </form>
    <% } %>
  </section>
  <section>
    <% if (user) { %>
      <h2>Got Feedback for this Idea?</h2>
      <form action="/ideas/<%= idea._id %>/reviews" method="POST">
      <input type="text" name="review" placeholder="Add comment" autocomplete="off">
      <label>
        Is this a good car idea?
        <input type="checkbox" name="goodIdea">
      </label>
        <button type="submit">Submit</button>
      </form>
    <% } %>
  </section>
  <section>
    <% if(idea.reviews.length) { %> 
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Review</th>
            <th>Good idea?</th>
          </tr>
        </thead>
        <tbody>
          <% reviews.forEach(function(review){ %>
            <tr>
              <td><%= review.createdAt.toLocaleDateString() %> </td>
              <td><%= review.content %></td>
              <td><%= review.goodIdea ? "good car idea" : "no good car idea" %> </td>
              <td></td>
            </tr>
          <% }) %>
          <!-- <tr>
            <td colspan="2"></td>
          </tr> -->
        </tbody>
      </table>
    <% } else { %>
      <h3>No one has rated this feature</h3>
    <% } %> 
  </section>
</main>

<%- include('../partials/footer') %>
