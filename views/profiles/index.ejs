<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main class="bg-light">
  <% if (user) { %>
  <h1 class="animate__animated animate__slideInLeft">Valued Focus Group Contributors</h1>
  <div class="container">
      <% profiles.forEach(profile => { %>
        <div class="col animate__animated animate__slideInRight">
          <a class="text-decoration-none" href="/profiles/<%= profile._id %>">
            <div class="card">
              <% if (profile.avatar) { %>
                <img
                  class="card-img-top"
                  src="<%= profile.avatar %>"
                  alt="<%= profile.name %>'s avatar"
                  width="100px"
                />
              <% } else {%>
                <img
                  class="card-img-top"
                  src="/images/icons/user.png"
                  alt="A placeholder avatar"
                  width="100%"
                />
              <% } %>
              <div class="card-body">
                <p class="card-title"><%= profile.name %></p>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
  </div>
  <% } else { %>
    <h1>You have to log in to do cool stuff</h1>
  <% } %> 
</main>

<script 
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" 
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" 
  crossorigin="anonymous"
></script>

<%- include('../partials/footer') %>