<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <h1>It's <%= isSelf ? "you" : profile.name %>!</h1>
  <section>
    <% if(profile.ideas.length) { %> 
            <p><%= isSelf ? "you" : profile.name %> contributed <%= profile.ideas.length %> ideas to this focus group.</p>
    <% } else { %>
      <p>No car ideas contributed from <%= isSelf ? "you" : profile.name %></p>
    <% } %> 
  </section>
</main>

<%- include('../partials/footer') %>